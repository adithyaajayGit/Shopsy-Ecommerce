<!-- Section: Design Block -->
<section class="text-center">
  <!-- Background image -->
  <div class="p-5 bg-image" style="
        background-image: url('https://startupstorymedia.com/wp-content/uploads/2023/06/Shopsy1.jpg');
        height: 300px;
        "></div>
  <!-- Background image -->

  <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
    <div class="card-body py-5 px-md-5">

      <div class="row justify-content-center">
        <div class="col-lg-8">
          <h2 class="fw-bold mb-5">Sign up now</h2>
          <form action="/adminsignup" method="post">
            <!-- 2 column grid layout with text inputs for the first and last names -->
            <div class="row">
              <div class="col-md-6 mb-4">
                <div data-mdb-input-init class="form-outline">
                  <input type="text" id="form3Example1" name="Name" class="form-control" />
                  <label class="form-label" for="form3Example1">Name</label>
                </div>
              </div>
              <div class="col-md-6 mb-4">
                <div data-mdb-input-init class="form-outline">
                  <input type="email" id="form3Example3" name="Email" class="form-control" />
                  <label class="form-label" for="form3Example3">Email address</label>
                </div>
              </div>
            </div>

            <!-- Password input -->
            <div class="row">
              <div class="col-md-6 mb-4">
                <div data-mdb-input-init class="form-outline">
                  <input type="password" id="form3Example4" name="Password" class="form-control" />
                  <label class="form-label" for="form3Example4">Password</label>
                </div>
              </div>
            </div>

            <!-- Submit button -->
            <div class="row">
              <div class="col-md-6 mb-4">
                <div class="text-center"> <!-- Moved text-center div inside the column -->
                  <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block">
                    Sign up
                  </button>
                </div>
              </div>
            </div>
          </form>

          <!-- Register buttons -->
            
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Section: Design Block -->
