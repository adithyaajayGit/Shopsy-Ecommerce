<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shopping Cart</title>
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Custom CSS for the cart page */
    .product-img {
      width: 100px;
      height: 100px;
      object-fit:fill;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Your Shopping Cart</h1>
    <div class="row">
      <div class="col-md-8">
        {{#each products}}
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title">{{this.productName}}</h5>
            <div class="row align-items-center">
              <div class="col-md-3">
                <img src="/product-images/{{this._id}}.jpg" alt="Product Image" class="product-img">
              </div>
              <div class="col-md-4">
                <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
              </div>
              <div class="col-md-2">
                <p class="card-text">$19.99</p>
              </div>
              <div class="col-md-3">
                <div class="input-group">
                  <span class="input-group-prepend">
                    <button class="btn btn-outline-secondary decrement-btn" type="button">-</button>
                  </span>
                  <input type="text" class="form-control quantity-input" value="1">
                  <span class="input-group-append">
                    <button class="btn btn-outline-secondary increment-btn" type="button">+</button>
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
        <!-- More products can be added here -->
      </div>
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Order Summary</h5>
            <ul class="list-group list-group-flush">
              <li class="list-group-item d-flex justify-content-between align-items-center">
                Subtotal
                <span class="subtotal">$19.99</span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                Shipping
                <span>Free</span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                Total
                <span class="total">$19.99</span>
              </li>
            </ul>
            <button class="btn btn-primary btn-block mt-3">Proceed to Checkout</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  
</body>
</html>
