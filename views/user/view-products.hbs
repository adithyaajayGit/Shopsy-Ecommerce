<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-4 mb-4">
                <div class="card h-100" style="width:17rem; height:10rem">
                    <img class="card-img-top" src="/product-images/{{this._id}}.jpg" alt="Card image cap" style="width: 100%; height: 270px;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.productName}}</h5>
                         <h5 class=>â‚¹{{this.price}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to Cart</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
